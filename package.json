{
  "name": "vuejs-idle",
  "version": "0.0.5",
  "description": "A Vue.js plugin to detect idle or inactive users.",
  "scope": "VueJsIdle",
  "main": "build/index.umd.js",
  "unpkg": "build/index.umd.js",
  "module": "build/index.es.js",
  "types": "build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shafikshaon/vuejs-idle.git"
  },
  "keywords": [
    "vue",
    "vuejs",
    "plugin",
    "idle",
    "vue-idle",
    "v-idle"
  ],
  "author": "Shafikur Rahman <shafikshaon@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shafikshaon/vuejs-idle/issues"
  },
  "homepage": "https://github.com/shafikshaon/vuejs-idle#readme",
  "scripts": {
    "dev": "vite",
    "test": "jest",
    "build": "vue-tsc --noEmit && vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview --port 5050",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "publish": "npm run build && npm publish",
    "test:unit": "vitest --environment jsdom"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.11.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.3",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.25.1",
    "eslint-plugin-vue": "^10.0.1",
    "install": "^0.13.0",
    "jest": "^29.7.0",
    "jest-date-mock": "^1.0.10",
    "jsdom": "^26.1.0",
    "lodash-es": "^4.17.21",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.3",
    "vitest": "^3.1.2",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.10"
  }
}
